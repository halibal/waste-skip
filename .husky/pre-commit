echo "ğŸ¨ Formatting your code..."
pnpm format || {
    echo 'âŒ Prettier check failed. Please fix code formatting and try again.'
    false;
}

echo "ğŸ” Checking for linting issues..."
pnpm lint || {
    echo 'âŒ ESLint check failed. Please fix the issues and try again.'
    false;
}

echo "ğŸ” Checking for console.log statements..."
staged_files=$(git diff --cached --name-only --diff-filter=d | grep -E '\.(js|jsx|ts|tsx)$' || true)

if [ -z "$staged_files" ]; then
    echo "âœ… No JavaScript/TypeScript files staged. Skipping console.log check."
else
    violations=$(echo "$staged_files" | xargs -I{} grep -Hn 'console.log' {} || true)
    if [ -n "$violations" ]; then
        echo "âŒ ERROR: Remove console.log statements before committing!"
        echo "ğŸ” Found in the following locations:"
        echo "$violations" | while IFS=: read -r file line code; do
            trimmed_code=$(echo "$code" | sed 's/^[[:space:]]*//;s/[[:space:]]*$//')
            echo "ğŸ“‚ File: $file"
            echo "ğŸ”¢ Line: $line"
            echo "ğŸš¨ Code that needs to be removed: $trimmed_code"
            echo "--------------------------------------"
        done
        false;
    else
        echo "âœ… No console.log statements found."
    fi
fi

git add .

echo "âœ… All checks passed! Proceeding with commit..."